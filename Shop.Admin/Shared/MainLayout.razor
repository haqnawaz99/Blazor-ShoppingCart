@inherits LayoutComponentBase

@inject NavigationManager navManager;

<div class="page">
    @if(IsAdminLoggdIn)
    { 
        <div class="sidebar">
            <NavMenu />
        </div>
    }
    

    <div class="main">
        @if(IsAdminLoggdIn)
        {
        <div class="top-row px-4">
            <a href="#" @onclick="Logout" target="_blank" class="ml-md-auto">Logout</a>
        </div>
        }
        <div class="content px-4">
            @Body
        </div>
    </div>
</div>

@code{
    public bool IsAdminLoggdIn = false;

    public void Logout()
    {
        navManager.NavigateTo("/login");
    }
}
